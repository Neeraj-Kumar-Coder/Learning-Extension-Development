{
    "manifest_version": 3,
    "name": "Pomodoro Timer",
    "description": "Helps you focus and get things done!",
    "version": "1.0.0",
    "icons": {
        "16": "./icons/icon.png",
        "32": "./icons/icon.png",
        "48": "./icons/icon.png",
        "64": "./icons/icon.png",
        "128": "./icons/icon.png"
    },
    "action": {
        "default_icon": {
            "16": "./icons/icon.png",
            "32": "./icons/icon.png",
            "48": "./icons/icon.png",
            "64": "./icons/icon.png",
            "128": "./icons/icon.png"
        },
        "default_title": "Pomodoro Timer",
        "default_popup": "./popup/popup.html"
    },
    "permissions": ["storage", "alarms", "notifications"],
    "background": {
        "service_worker": "./background/service_worker.js"
    }
}
